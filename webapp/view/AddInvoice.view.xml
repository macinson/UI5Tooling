<mvc:View
    controllerName="ui5.tooling.controller.AddInvoice"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page title="{i18n>addInvoiceTitle}">
        <Panel>
            <f:SimpleForm
                id="addInvoiceForm"
                editable="true"
                class="ResponsiveGridLayout"
                columnsXL="2"
                columnsL="2"
                columnsM="1">
                <f:toolbar>
                    <Toolbar>
                        <Title text ="{i18n>inputInvoiceDetails}"/>
                        <ToolbarSpacer/>
                        <Button text="test"
                            press=".saveInvoice"/>
                    </Toolbar>
                </f:toolbar>
                <f:content>
                    <Label text="Nazwa"/>
                    <Input id="productName"/>
                    <Label text="Cena"/>
                    <Input id="extendedPrice"/>
                </f:content>
            </f:SimpleForm>
        </Panel>
    </Page>
</mvc:View>